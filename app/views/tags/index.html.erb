<div id="wrapper-conteudo">
  <h1>Listando Tags</h1>

  <% if params['notice'] %>
  <div class="alert alert-success"><%= params['notice'] %></div>
  <% end %>

  
  <table class="lista-conteudo">
    <thead>
      <th><i class="icon-chevron-up"></i><i class="icon-chevron-down"></i> Título</th>
      <th></th>
    </thead>

<% @tags.each do |tag| %>
  <tr>
    <td><%= link_to tag.nome, tag, :class => 'conteudo-modal' %></td>
    <td class='comando'><%= link_to 'Excluir', tag, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
  </tr>
<% end %>
</table>

<br />

<div id="conteudo-rodape">
  <%= link_to 'Nova Tag', new_tag_path, :class => 'btn btn-primary' %>
  <div class="input-append" style='margin-bottom: 0px;'>
    <input class="span2" id="appendedInputButtons" type="text">
    <button class="btn" type="button"><i class="icon-search"></i></button>
  </div>
  <%= pagination @tags %>
  </div>
</div>

<div id="dialog-modal"></div>