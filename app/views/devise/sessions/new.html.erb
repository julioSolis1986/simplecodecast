<!DOCTYPE html>
<html>
<head>
  <title>Gerenciador</title>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,600' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body style='background-color: #FAFAFA;'>
	<div class='container middle-screen-wrapper'>
		<div class='middle-screen'>
			<div class='row-fluid'>
				<div class='span6'>
					<%= image_tag 'imagem-inicial.jpg' %>
					<div class='light-blue'><p class='white-color' style='line-height: 54px'>Aumente sua produtividade</p></div>
				</div>

				<div class='span6'>
				<div class='row-fluid'>
				<h2 class='light-blue-color pull-right' style='margin: 0 10px 5px 0;'><i class='icon-cloud'></i> eonGym</h2>
				</div>
				<p class='pull-right' style='margin: 0 10px 45px 0;'>O seu gerenciador de academia</p>

				<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-vertical' }, :defaults => { :input_html => { :class => 'input-block-level' }}) do |f| %>
					<div class="form-inputs">
						<div class='row-fluid'>
						<%= f.input :email, :required => false, :autofocus => true, :wrapper => :prepend, :label => false, :wrapper_html => { :class => 'span12' } do %>
							<%= content_tag :div, :class => 'row-fluid' do %>
								<%= f.label :email, :class => "span4" %>
								<%= f.text_field :email, :class => "span8" %>
							<% end %>
						<% end %>
						</div>

						<div class='row-fluid'>
						<%= f.input :password, :required => false, :autofocus => true, :wrapper => :prepend, :label => false, :wrapper_html => { :class => 'span12' } do %>
							<%= content_tag :div, :class => 'row-fluid' do %>
								<%= f.label :password, :class => "span4" %>
								<%= f.password_field :password, :class => "span8" %>
							<% end %>
						<% end %>
						</div>

						<!-- <div class='row-fluid'>
						<%#= f.input :remember_me, :as => :boolean, :inline_label => 'Lembrar de vocÃª?', :label => false, :wrapper_html => { :class => 'span5 pull-right'}, :input_html => { :class => 'input-block-level' } if devise_mapping.rememberable? %>
						</div> -->
					</div>

					<div class='row-fluid'>
			    	<%= f.button :submit, "Entrar", :class => 'span3 btn-primary pull-right', :style => 'margin-right: 10px;' %>
			    	</div>
				<% end %>

				<div class='pull-right' style = 'margin-right: 10px;'>
				<%= render "devise/shared/links" %>
				</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>