<div id="wrapper-conteudo">
  <div class='page-header'>
    <h1>Avaliações Físicas</h1>
    <h2><i class='icon-book'></i> Listagem</h2>
  </div>

  <% if params['notice'] %>
  <div class="alert alert-success"><%= params['notice'] %></div>
  <% end %>

  <div class='table-header'>
    <h1>
      <i class='icon-tag'></i>
      <a class='ativo' href='#'>Todos</a>
    </h1>
    <h1>
      <a href='#'>Ativos</a>
    </h1>
    <h1>
      <a href='#'>Inativos</a>
    </h1>

    <div class="form-search pull-right">
      <input class='input-medium search-query' placeholder='Buscar...' type="text">
      <i class='icon-search'></i>
    </div>
  </div>
  <table class="lista-conteudo">
    <thead>
      <th><i class="icon-chevron-up"></i><i class="icon-chevron-down"></i> Cliente</th>
      <th><i class="icon-chevron-up"></i><i class="icon-chevron-down"></i> Data Avaliação</th>
      <th></th>
    </thead>

  <% @fichas.each do |ficha| %>
    <tr>
      <td><%= link_to ficha.clientes.nome, ficha, :class => 'conteudo-modal' unless ficha.clientes.nil? %></td>
      <td><%= link_to I18n.localize(ficha.created_at, :format => :short), ficha, :class => 'conteudo-modal' %></td>
      <td class='comando'><%= link_to 'Excluir', ficha, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <div id="conteudo-rodape">
  <%= simple_form_for @cliente, :method => :get, :url => new_ficha_path, :html => { :multipart => true, :class => 'form-vertical' }, :defaults => { :input_html => { :class => 'input-block-level' } } do |f| %>
    <%= f.autocomplete_field(:nome, autocomplete_cliente_nome_clientes_path, :update_elements => {:id => '#js-cliente_id'}, :class => 'no-margin-bottom', :id => 'js-cliente_nome', :placeholder => 'Selecione um cliente...') %>
    <%= hidden_field_tag(:clientes_id, '', :class => 'no-margin-bottom', :id => 'js-cliente_id') %>
    <%= f.submit 'Nova Ficha', :class => 'blue btn btn-primary', :id => 'js-submit_cliente' %>
  <% end %>
  <%= pagination @fichas %>
  </div>
</div>

<div id="modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
</div>