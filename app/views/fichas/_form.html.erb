<%= javascript_include_tag 'fichas' %>

<div id="fuelux-wizard" class="row-fluid hide" data-target="#step-container" style="display: block;">
  <ul class="wizard-steps">
    <li data-target="#step1" class="active" style="min-width: 33%; max-width: 33%;">
      <span class="step">1</span>
      <span class="title">Séries Treino</span>
    </li>

    <li data-target="#step2" style="min-width: 33%; max-width: 33%;">
      <span class="step">2</span>
      <span class="title">Dias de Treino</span>
    </li>

    <li data-target="#step3" style="min-width: 33%; max-width: 33%;">
      <span class="step">3</span>
      <span class="title">Concluído</span>
    </li>
  </ul>
</div>

<%= simple_form_for @ficha, :validate => true, :html => { :class => 'form-vertical' }, :defaults => { :input_html => { :class => 'input-block-level' } } do |f| %>
<%= f.input :clientes_id, :as => :hidden, :input_html => { :value => @cliente.id } %>

<div id='step1' class="tab-content">
  <div>
    <div class='row-fluid'>
      <%= f.fields_for :series_treinos do |serie_treino| %>
        <%= render 'series_treinos_form', :f => serie_treino %>
      <% end %>

      <%= link_to_add_association "Nova Série Treino", f, :series_treinos, :partial => 'series_treinos_form', :class => 'btn btn-success span12 green' %>
    </div>
  </div>

  <div class='form-actions'>
    <div class="btn-group navigation-modal form-confirm pull-right">
      <%= link_to 'Voltar', fichas_path, :class => 'btn' %>
      <%= f.submit :class => 'btn btn-primary' %>
    </div>
  </div>
</div>

<div id='step2' class="tab-content" style='display: none;'>
  A
</div>

<% end %>