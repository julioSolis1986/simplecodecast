<%= simple_form_for @cliente, :validate => true, :html => { :multipart => true, :class => 'form-vertical' }, :defaults => { :input_html => { :class => 'input-block-level' } } do |f| %>

<%= field_set_tag 'Dados Básicos' do %>
  <div class="row-fluid">
    <%= f.input :nome, :wrapper_html => { :class => 'span6' } %>
    <%= f.input :data_nascimento, :as => :string, :input_html => { :alt => 'datepicker' }, :wrapper_html => { :class => 'span3' }, :validate => { :presence => true, :uniqueness => false } %>
    <%= f.input :sexo_id, :collection => Sexo.all.map{ |p| [p.nome, p.id] }, :wrapper_html => { :class => 'span3' } %>
  </div>

  <div class="row-fluid">
    <%= f.input :etnia_id, :collection => Etnia.all.map { |p| [p.nome, p.id] }, :wrapper_html => { :class => 'span4' } %>
    <%= f.input :cpf, :wrapper_html => { :class => 'span4' } %>
    <%= f.input :rg, :wrapper_html => { :class => 'span4' } %>
  </div>
<% end %>

<%= field_set_tag 'Endereço' do %>
  <div class='tab-nested' id="enderecos_field">
    <%= f.simple_fields_for :enderecos do |endereco| %>
      <%= render 'enderecos/enderecos_form', f, :endereco %>
    <% end %>

    <%= link_to_add_association "Novo Endereço", f, :enderecos, :partial => 'enderecos/enderecos_form', :class => 'btn btn-success btn-block green' %>
  </div>
<% end %>

<%= field_set_tag 'Contato' do %>
  <div>
    <div class='tab-nested' id="emails_field">
      <%= f.simple_fields_for :emails do |email| %>
      <%= render 'emails/emails_form', f, :email %>
      <% end %>

      <%= link_to_add_association "Novo E-mail", f, :emails, :partial => 'emails/emails_form', :class => 'btn btn-success btn-block green' %>
    </div>
  </div>
  <div>
    <div class='tab-nested' id="telefones_field">
      <%= f.simple_fields_for :telefones do |telefone| %>
      <%= render 'telefones/telefones_form', f, :telefone %>
      <% end %>

      <%= link_to_add_association "Novo Telefone", f, :telefones, :partial => 'telefones/telefones_form', :class => 'btn btn-success btn-block green' %>
    </div>
  </div>
<% end %>

<div class="btn-group navigation-modal form-confirm pull-right">
  <%= link_to 'Voltar', clientes_path, :class => 'btn' %>
  <%= f.submit :class => 'btn btn-primary' %>
</div>
<% end %>