<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
  <h3 id="myModalLabel"><%= @cliente.nome %></h3>
</div>
<div class="modal-body">
  <div class='row-fluid'>
    <div class='span3'>
      <ul class="nav nav-pills nav-stacked" id="tabs">
        <li class="active"><a href="#tab-dados-basicos">Dados Básicos</a></li>
        <li><a href="#tab-enderecos">Endereços</a></li>
        <li><a href="#tab-contatos">Contatos</a></li>
      </ul>
    </div>

    <div class='span9 tab-content'>
      <div class="tab-pane active" id="tab-dados-basicos">
        <div class='row-fluid'>
          <div class='span4 show-head'><p><b>Nome</b></p></div>
          <div class='span4 show-head'><p><b>Data Nasc.</b></p></div>
          <div class='span4 show-head'><p><b>Sexo</b></p></div>
        </div>
        <div class='row-fluid'>
          <div class='span4'><%= @cliente.nome %></div>
          <div class='span4'><%= @cliente.data_nascimento %></div>
          <div class='span4'><%= @cliente.sexo.nome %></div>
        </div>

        <div class='row-fluid'>
          <div class='span4 show-head'><p><b>Etnia</b></p></div>
          <div class='span4 show-head'><p><b>CPF</b></p></div>
          <div class='span4 show-head'><p><b>RG</b></p></div>
        </div>
        <div class='row-fluid'>
          <div class='span4'><%= @cliente.etnia.nome %></div>
          <div class='span4'><%= @cliente.cpf %></div>
          <div class='span4'><%= @cliente.rg %></div>
        </div>
      </div>

      <div class="tab-pane" id="tab-enderecos">
        <% @cliente.enderecos.each do |endereco| %>
        <div class='tab-nested'>
          <div class='row-fluid'>
            <div class='span4 show-head'><p><b>Logradouro</b></p></div>
            <div class='span4 show-head'><p><b>Número</b></p></div>
            <div class='span4 show-head'><p><b>Complemento</b></p></div>
          </div>
          <div class='row-fluid'>
            <div class='span4'><%= endereco.logradouro %></div>
            <div class='span4'><%= endereco.numero %></div>
            <div class='span4'><%= endereco.complemento %></div>
          </div>
          <div class='row-fluid'>
            <div class='span4 show-head'><p><b>Bairro</b></p></div>
            <div class='span4 show-head'><p><b>CEP</b></p></div>
            <div class='span4 show-head'><p><b>Cidade</b></p></div>
          </div>
          <div class='row-fluid'>
            <div class='span4'><%= endereco.bairro %></div>
            <div class='span4'><%= endereco.cep %></div>
            <div class='span4'><%= endereco.cidade.nome %></div>
          </div>
          <div class='row-fluid'>
            <div class='span4 show-head'><p><b>Estado</b></p></div>
            <div class='span4 show-head'><p><b>País</b></p></div>
            <div class='span4 show-head'></div>
          </div>
          <div class='row-fluid'>
            <div class='span4'><%= endereco.estado.nome %></div>
            <div class='span4'><%= endereco.pais %></div>
            <div class='span4'></div>
          </div>
        </div>
        <% end %>
      </div>

      <div class="tab-pane" id="tab-contatos">
      </div>
    </div>
  </div>
</div>
<div class="modal-footer">
  <%= link_to 'Editar', edit_cliente_path(@cliente), :class => 'btn btn-primary' %>
</div>