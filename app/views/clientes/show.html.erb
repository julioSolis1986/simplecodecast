<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
  <h3 id="myModalLabel"><%= @cliente.nome %></h3>
</div>
<div class="modal-body">
  <div class='row-fluid'>
    <div class='span3' style='margin-top: 40px;'>
      <ul class="nav nav-pills nav-stacked" id="tabs">
        <li class="active"><a href="#tab-cadastro" data-toggle="tab">Cliente</a></li>
        <li>
          <a href="#collapseOne" class="dropdown-toggle" data-toggle="collapse">Avaliações Físicas <b class="caret"></b></a>
          <ul id="collapseOne" class="nav nav-pills nav-stacked sem-margem accordion-body collapse">
            <li><%= link_to 'Nova Avaliação Física', new_avaliacao_fisica_path(:clientes_id => @cliente.id), :class => 'green' %></li>
            <% @cliente.avaliacao_fisicas.each do |avaliacao_fisica| -%>
            <li><a href="#tab-avaliacao-fisica-<%= avaliacao_fisica.id %>" class='js-sem_href' data-toggle="tab"><%= avaliacao_fisica.created_at.strftime("%d/%m/%Y") %></a></li>
            <% end -%>
          </ul>
        </li>
        <li><a href="#tab-ficha" data-toggle="tab">Ficha</a></li>
      </ul>
    </div>

    <div class='span9 tab-content'>
      <div class="tab-pane active" id="tab-cadastro" style='margin-top: 40px;'>
        <fieldset>
        <legend>Dados Básicos</legend>
        <div class='row-fluid'>
          <div class='span4 show-head'><p><b>Nome</b></p></div>
          <div class='span4 show-head'><p><b>Data Nasc.</b></p></div>
          <div class='span4 show-head'><p><b>Sexo</b></p></div>
        </div>
        <div class='row-fluid'>
          <div class='span4'><%= @cliente.nome %></div>
          <div class='span4'><%= @cliente.data_nascimento %></div>
          <div class='span4'><%= @cliente.sexo.nome %></div>
        </div>

        <div class='row-fluid'>
          <div class='span4 show-head'><p><b>Etnia</b></p></div>
          <div class='span4 show-head'><p><b>CPF</b></p></div>
          <div class='span4 show-head'><p><b>RG</b></p></div>
        </div>
        <div class='row-fluid'>
          <div class='span4'><%= @cliente.etnia.nome %></div>
          <div class='span4'><%= @cliente.cpf %></div>
          <div class='span4'><%= @cliente.rg %></div>
        </div>
        </fieldset>

        <% if @cliente.enderecos.any? %>
        <fieldset>
        <legend>Endereço</legend>
        <% @cliente.enderecos.each do |endereco| %>
          <div class='tab-nested'>
            <div class='row-fluid'>
              <div class='span4 show-head'><p><b>Logradouro</b></p></div>
              <div class='span4 show-head'><p><b>Número</b></p></div>
              <div class='span4 show-head'><p><b>Complemento</b></p></div>
            </div>
            <div class='row-fluid'>
              <div class='span4'><%= endereco.logradouro %></div>
              <div class='span4'><%= endereco.numero %></div>
              <div class='span4'><%= endereco.complemento %></div>
            </div>
            <div class='row-fluid'>
              <div class='span4 show-head'><p><b>Bairro</b></p></div>
              <div class='span4 show-head'><p><b>CEP</b></p></div>
              <div class='span4 show-head'><p><b>Cidade</b></p></div>
            </div>
            <div class='row-fluid'>
              <div class='span4'><%= endereco.bairro %></div>
              <div class='span4'><%= endereco.cep %></div>
              <div class='span4'><%= endereco.cidade.nome %></div>
            </div>
            <div class='row-fluid'>
              <div class='span4 show-head'><p><b>Estado</b></p></div>
              <div class='span4 show-head'><p><b>País</b></p></div>
              <div class='span4 show-head'></div>
            </div>
            <div class='row-fluid'>
              <div class='span4'><%= endereco.estado.nome %></div>
              <div class='span4'><%= endereco.pais %></div>
              <div class='span4'></div>
            </div>
          </div>
          <% end %>
        </fieldset>
        <% end %>

        <% if @cliente.emails.any? or @cliente.telefones.any? %>
        <fieldset>
        <legend>Contato</legend>
        <% @cliente.emails.each do |email| %>
          <div class='tab-nested'>
            <div class='row-fluid'>
              <div class='span8 show-head'><p><b>Número</b></p></div>
              <div class='span4'><%= email.email %></div>
            </div>
          </div>
        <% end %>
        <% @cliente.telefones.each do |telefone| %>
          <div class='tab-nested'>
            <div class='row-fluid'>
              <div class='span8 show-head'><p><b>Número</b></p></div>
              <div class='span4'><%= telefone.numero %></div>
            </div>
          </div>
        <% end %>
        </fieldset>
        <% end %>
      </div>

      <% @avaliacao_fisicas.each do |avaliacao_fisica| %>
      <div class="tab-pane" id="tab-avaliacao-fisica-<%= avaliacao_fisica.id %>">
        <ul class="nav nav-pills">
          <li class="active"><a href="#tab-anamnese-<%= avaliacao_fisica.id %>" data-toggle='tab'>Anamnese</a></li>
          <li><a href="#tab-perimetro-<%= avaliacao_fisica.id %>" data-toggle='tab'>Perímetros</a></li>
          <li><a href="#tab-composicao-corporal-<%= avaliacao_fisica.id %>" data-toggle='tab'>Composição Corporal</a></li>
          <li><a href="#tab-neuromotor-<%= avaliacao_fisica.id %>" data-toggle='tab'>Neuromotor</a></li>
          <li><a href="#tab-avaliacao-cardiorespiratoria-<%= avaliacao_fisica.id %>" data-toggle='tab'>Avaliação Cardiorespiratória</a></li>
        </ul>

        <div class="tab-content">
          <div class="tab-pane active" id="tab-anamnese-<%= avaliacao_fisica.id %>">
            <fieldset>
              <legend>Avaliação Clínica (Par-Q)</legend>
              <div class='row-fluid'>
                <div class='span10 show-head'><p><b><%= avaliacao_fisica.anamneses.pergunta_3_01 %></b></p></div>
                <div class='span2'><%= h_b avaliacao_fisica.anamneses.resposta_3_01 %></div>
              </div>
              <div class='row-fluid'>
                <div class='span10 show-head'><p><b><%= avaliacao_fisica.anamneses.pergunta_3_02 %></b></p></div>
                <div class='span2'><%= h_b avaliacao_fisica.anamneses.resposta_3_02 %></div>
              </div>
              <div class='row-fluid'>
                <div class='span10 show-head'><p><b><%= avaliacao_fisica.anamneses.pergunta_3_03 %></b></p></div>
                <div class='span2'><%= h_b avaliacao_fisica.anamneses.resposta_3_03 %></div>
              </div>
              <div class='row-fluid'>
                <div class='span10 show-head'><p><b><%= avaliacao_fisica.anamneses.pergunta_3_04 %></b></p></div>
                <div class='span2'><%= h_b avaliacao_fisica.anamneses.resposta_3_04 %></div>
              </div>
              <div class='row-fluid'>
                <div class='span10 show-head'><p><b><%= avaliacao_fisica.anamneses.pergunta_3_05 %></b></p></div>
                <div class='span2'><%= h_b avaliacao_fisica.anamneses.resposta_3_05 %></div>
              </div>
              <div class='row-fluid'>
                <div class='span10 show-head'><p><b><%= avaliacao_fisica.anamneses.pergunta_3_06 %></b></p></div>
                <div class='span2'><%= h_b avaliacao_fisica.anamneses.resposta_3_06 %></div>
              </div>
              <div class='row-fluid'>
                <div class='span10 show-head'><p><b><%= avaliacao_fisica.anamneses.pergunta_3_07 %></b></p></div>
                <div class='span2'><%= h_b avaliacao_fisica.anamneses.resposta_3_07 %></div>
              </div>
            </fieldset>

            <fieldset>
              <legend>Anamnese da prática de atividades físicas</legend>
              <div class='row-fluid'>
                <div class='span10 show-head'><p><b><%= avaliacao_fisica.anamneses.pergunta_2_01 %></b></p></div>
                <div class='span2'><%= h_b avaliacao_fisica.anamneses.resposta_2_01 %></div>
              </div>
              <div class='row-fluid'>
                <div class='span10 show-head'><p><b><%= avaliacao_fisica.anamneses.pergunta_2_02 %></b></p></div>
                <div class='span2'><%= h_b avaliacao_fisica.anamneses.resposta_2_02 %></div>
              </div>
            </fieldset>

            <% unless avaliacao_fisica.anamneses.resposta_1_01.blank? %>
            <fieldset>
              <legend>Objetivos com relação à Atividade Física</legend>
              <div class='row-fluid'>
                <div class='span12'><p><b><%= avaliacao_fisica.anamneses.resposta_1_01 %></b></p></div>
              </div>
            </fieldset>
            <% end %>
          </div>

          <div class="tab-pane" id="tab-perimetro-<%= avaliacao_fisica.id %>">
            <fieldset>
              <legend>Perímetros Unilaterais</legend>
              <% avaliacao_fisica.perimetro.avaliacao_perimetro.each do |perimetro| %>
                <% if perimetro.tipo.to_i == 1 %>
                <div class='row-fluid'>
                  <div class='span10 show-head'><p><b><%= perimetro.nome %></b></p></div>
                  <div class='span2'><p><%= perimetro.valor_1 %></p></div>
                </div>
                <% end %>
              <% end %>
            </fieldset>
            <fieldset>
              <legend>Perímetros Bilaterais</legend>
              <% avaliacao_fisica.perimetro.avaliacao_perimetro.each do |perimetro| %>
                <% if perimetro.tipo.to_i == 2 %>
                <div class='row-fluid'>
                  <div class='span4 show-head'><p><b><%= perimetro.nome %></b></p></div>
                  <div class='span2 show-head'><p><b>Esquerda</b></p></div>
                  <div class='span2'><p><%= perimetro.valor_1 %></p></div>
                  <div class='span2 show-head'><p><b>Direita</b></p></div>
                  <div class='span2'><p><%= perimetro.valor_2 %></p></div>
                </div>
                <% end %>
              <% end %>
            </fieldset>
          </div>

          <div class="tab-pane" id="tab-composicao-corporal-<%= avaliacao_fisica.id %>">
           <fieldset>
              <legend>Protocolo</legend>
              <div class='row-fluid'>
              <div class='span12 show-head'><p><%= avaliacao_fisica.composicao_corporal.protocolo %></p></div>
              </div>
            </fieldset>
            <fieldset>
              <legend>Medidas</legend>
              <div class='row-fluid'>
                <div class='span4 show-head'><p><b>Peso Atual</b></p></div>
                <div class='span2 show-head'><p><%= avaliacao_fisica.composicao_corporal.peso_atual.round(2).to_s + 'Kg' %></p></div>
                <div class='span4 show-head'><p><b>Altura</b></p></div>
                <div class='span2 show-head'><p><%= avaliacao_fisica.composicao_corporal.altura.round(2).to_s + 'M' %></p></div>
              </div>
            </fieldset>
            <fieldset>
              <legend>Dobras</legend>
              <% unless avaliacao_fisica.composicao_corporal.triciptal.blank? %>
              <div class='row-fluid'>
                <div class='span10 show-head'><p><b>Triciptal</b></p></div>
                <div class='span2 show-head'><p><%= avaliacao_fisica.composicao_corporal.triciptal %></p></div>
              </div>
              <% end %> 
              <% unless avaliacao_fisica.composicao_corporal.subescapular.blank? %>
              <div class='row-fluid'>
                <div class='span10 show-head'><p><b>Subescapular</b></p></div>
                <div class='span2 show-head'><p><%= avaliacao_fisica.composicao_corporal.subescapular %></p></div>
              </div>
              <% end %>
              <% unless avaliacao_fisica.composicao_corporal.peitoral.blank? %>
              <div class='row-fluid'>
                <div class='span10 show-head'><p><b>Peitoral</b></p></div>
                <div class='span2 show-head'><p><%= avaliacao_fisica.composicao_corporal.peitoral %></p></div>
              </div>
              <% end %>
              <% unless avaliacao_fisica.composicao_corporal.axilar.blank? %>
              <div class='row-fluid'>
                <div class='span10 show-head'><p><b>Axilar</b></p></div>
                <div class='span2 show-head'><p><%= avaliacao_fisica.composicao_corporal.axilar %></p></div>
              </div>
              <% end %>
              <% unless avaliacao_fisica.composicao_corporal.supra_iliaca.blank? %>
              <div class='row-fluid'>
                <div class='span10 show-head'><p><b>Supra Ilíaca</b></p></div>
                <div class='span2 show-head'><p><%= avaliacao_fisica.composicao_corporal.supra_iliaca %></p></div>
              </div>
              <% end %>
              <% unless avaliacao_fisica.composicao_corporal.abdominal.blank? %>
              <div class='row-fluid'>
                <div class='span10 show-head'><p><b>Abdminal</b></p></div>
                <div class='span2 show-head'><p><%= avaliacao_fisica.composicao_corporal.abdominal %></p></div>
              </div>
              <% end %>
              <% unless avaliacao_fisica.composicao_corporal.coxa.blank? %>
              <div class='row-fluid'>
                <div class='span10 show-head'><p><b>Coxa</b></p></div>
                <div class='span2 show-head'><p><%= avaliacao_fisica.composicao_corporal.coxa %></p></div>
              </div>
              <% end %>
              <div class='row-fluid'>
                <div class='span10 show-head'><p><b>Soma</b></p></div>
                <div class='span2 show-head'><p><%= avaliacao_fisica.composicao_corporal.soma %></p></div>
              </div>
            </fieldset>
            <fieldset>
              <legend>Resultados</legend>
              <div class='row-fluid'>
                <div class='span10 show-head'><p><b>Percentual Gordura</b></p></div>
                <div class='span2 show-head'><p><%= avaliacao_fisica.composicao_corporal.percentual_gordura.round(2).to_s + '%' %></p></div>
              </div>
              <div class='row-fluid'>
                <div class='span10 show-head'><p><b>Percentual Gordura Ideal</b></p></div>
                <div class='span2 show-head'><p><%= avaliacao_fisica.composicao_corporal.percentual_gordura_ideal.round(2).to_s + '%' %></p></div>
              </div>
              <div class='row-fluid'>
                <div class='span10 show-head'><p><b>Peso Gordo</b></p></div>
                <div class='span2 show-head'><p><%= avaliacao_fisica.composicao_corporal.peso_gordo.round(2).to_s + 'Kg' %></p></div>
              </div>
              <div class='row-fluid'>
                <div class='span10 show-head'><p><b>Peso Magro</b></p></div>
                <div class='span2 show-head'><p><%= avaliacao_fisica.composicao_corporal.peso_magro.round(2).to_s + 'Kg' %></p></div>
              </div>
              <div class='row-fluid'>
                <div class='span10 show-head'><p><b>Peso Ideal</b></p></div>
                <div class='span2 show-head'><p><%= avaliacao_fisica.composicao_corporal.peso_ideal.round(2).to_s + 'Kg' %></p></div>
              </div>
            </fieldset>
          </div>

          <div class="tab-pane" id="tab-neuromotor-<%= avaliacao_fisica.id %>">
          <%= debug avaliacao_fisica %>
          </div>

          <div class="tab-pane" id="tab-avaliacao-cardiorespiratoria-<%= avaliacao_fisica.id %>">
          <%= debug avaliacao_fisica %>
          </div>
        </div>
      </div>
      <% end %>

    </div>
  </div>
</div>
<div class="modal-footer">
  <%= link_to 'Editar', edit_cliente_path(@cliente), :class => 'btn btn-primary' %>
</div>