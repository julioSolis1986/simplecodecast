<div class="nested-fields">
  <%= field_set_tag "protocol" do %>
      <div class="row-fluid">
        <%= f.input :protocol, :as => :radio_buttons, :collection => ['Cooper', 'Pollock'], :label => false, :wrapper_html => {:class => 'span12'}, :item_wrapper_class => 'inline', :checked => 'Cooper' %>
      </div>
  <% end %>

  <%= field_set_tag "Medidas" do %>
      <div class='row-fluid'>
        <%= f.input :total_distance, :wrapper => :prepend, :label => false, :wrapper_html => {:class => 'span6'} do %>
            <%= content_tag :div, :class => 'row-fluid' do %>
                <%= f.label :total_distance, 'Distância Total Percorrida', :class => "span5" %>
                <%= f.text_field :total_distance, :class => "span7" %>
            <% end %>
        <% end %>
        <%= f.input :maximum_heart_rate, :wrapper => :prepend, :label => false, :wrapper_html => {:class => 'span6'} do %>
            <%= content_tag :div, :class => 'row-fluid' do %>
                <%= f.label :maximum_heart_rate, 'Freq. Cardíaca Máxima', :class => "span5" %>
                <%= f.text_field :maximum_heart_rate, :class => "span7", :disabled => true %>
            <% end %>
        <% end %>
      </div>
  <% end %>

  <%= field_set_tag "Resultados" do %>
      <div class='row-fluid'>
        <div class='span6'>
          <div class="input-prepend row-fluid">
            <%= content_tag :div, :class => 'row-fluid' do %>
                <%= label_tag :classificao, 'Classificação', :class => "span5" %>
                <%= text_field_tag :classificacao_cardiorespiratoria, '', {:class => 'span7', :disabled => true} %>
            <% end %>
          </div>
        </div>
        <div class='span6'>
          <div class="input-prepend row-fluid">
            <%= content_tag :div, :class => 'row-fluid' do %>
                <%= label_tag :vo2_maximo, 'VO2 Máximo', :class => "span5" %>
                <%= text_field_tag :vo2_maximo, '', {:class => 'span7', :disabled => true} %>
            <% end %>
          </div>
        </div>
      </div>
  <% end %>
</div>