<div id="wrapper-conteudo">
  <h1>Listando Usuários</h1>

  <% if params['notice'] %>
  <div class="alert alert-success"><%= params['notice'] %></div>
  <% end %>

  
  <table class="lista-conteudo">
    <thead>
      <th><i class="icon-chevron-up"></i><i class="icon-chevron-down"></i> Nome</th>
      <th><i class="icon-chevron-up"></i><i class="icon-chevron-down"></i> Login</th>
      <th></th>
    </thead>

  <% @usuarios.each do |usuario| %>
    <tr>
      <td><%= link_to usuario.nome, usuario, :class => 'conteudo-modal' %></td>
      <td><%= link_to usuario.login, usuario, :class => 'conteudo-modal' %></td>
      <td class='comando'><%= link_to 'Excluir', usuario, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <div id="conteudo-rodape">
  <%= link_to 'Novo Usuário', new_usuario_path, :class => 'btn btn-primary' %>
  <div class="input-append" style='margin-bottom: 0px;'>
    <input class="span2" id="appendedInputButtons" type="text">
    <button class="btn" type="button"><i class="icon-search"></i></button>
  </div>
  <%= pagination @usuarios %>
  </div>
</div>

<div id="dialog-modal"></div>