<%= simple_form_for @exercicio, :html => { :class => 'form-vertical' }, :defaults => { :input_html => { :class => 'input-block-level' } } do |f| %>

<%= field_set_tag 'Dados BÃ¡sicos' do %>
  <div class="row-fluid">
    <%= f.input :tipo_exercicio_id, :collection => TipoExercicio.all.map { |p| [p.nome, p.id] }, :wrapper_html => { :class => 'span2' }, :include_blank => false %>
    <%= f.input :nome, :wrapper_html => { :class => 'span4 js-wrapper_nome' }, :url => autocomplete_exercicio_nome_exercicios_path, :as => :autocomplete, :id_element => '', :update_elements => {} %>
    <%= f.input :grupo_muscular_id, :collection => GrupoMuscular.all.map { |p| [p.nome, p.id] }, :wrapper_html => { :class => 'span3 js-wrapper_grupo_muscular_id' } %>
    <%= f.input :dificuldade_exercicio_id, :collection => DificuldadeExercicio.all.map { |p| [p.nome, p.id] }, :wrapper_html => { :class => 'span3' } %>
  </div>

  <div class="row-fluid">
    <%= f.input :descricao, :wrapper_html => { :class => 'span12' }, :input_html => { :rows => 3 } %>
  </div>
<% end %>

<%= field_set_tag 'Imagens' do %>
<div class="row-fluid">
  <div>
    <%= f.simple_fields_for :exemplos_exercicios do |exemplo_exercicio| %>
      <%= render 'exercicios/exemplos_exercicios_form', :f => exemplo_exercicio %>
    <% end %>

    <div class='clearboth'>
      <%= link_to_add_association "Nova Imagem", f, :exemplos_exercicios, :partial => 'exercicios/exemplos_exercicios_form', :class => 'btn btn-success btn-block green' %>
    </div>
  </div>
</div>
<% end %>

<div class="btn-group navigation-modal form-confirm pull-right">
  <%= link_to 'Voltar', avaliacao_fisicas_path, :class => 'btn' %>
  <%= f.submit :class => 'btn btn-primary' %>
</div>
<% end %>