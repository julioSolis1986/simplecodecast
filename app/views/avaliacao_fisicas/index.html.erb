<div id="wrapper-conteudo">
  <h1>Listando Avaliações</h1>

  <% if params['notice'] %>
  <div class="alert alert-success"><%= params['notice'] %></div>
  <% end %>

  <table class="lista-conteudo">
    <thead>
      <th><i class="icon-chevron-up"></i><i class="icon-chevron-down"></i> Data</th>
      <th></th>
    </thead>

  <% @avaliacao_fisicas.each do |avaliacao_fisica| %>
    <tr>
      <td><%= link_to avaliacao_fisica.nome, avaliacao_fisica, :class => 'conteudo-modal' %></td>
      <td class='comando'><%= link_to 'Excluir', avaliacao_fisica, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <div id="conteudo-rodape">
  <%= link_to 'Nova Avaliação Física', new_avaliacao_fisica_path, :class => 'btn btn-primary' %>
  <div class="input-append" style='margin-bottom: 0px;'>
    <input class="span2" id="appendedInputButtons" type="text">
    <button class="btn" type="button"><i class="icon-search"></i></button>
  </div>
  <%= pagination @avaliacao_fisicas %>
  </div>
</div>

<div id="modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
</div>