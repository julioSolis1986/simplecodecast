<%= simple_form_for @usuario, :validate => true, :html => { :multipart => true, :class => 'form-vertical' }, :defaults => { :input_html => { :class => 'input-block-level' } } do |f| %>

<%= field_set_tag 'Dados Básicos' do %>
  <div class="row-fluid">
    <%= f.input :name, :wrapper_html => { :class => 'span8' } %>
    <%= f.input :data_nascimento, :as => :string, :input_html => { :alt => 'datepicker' }, :wrapper_html => { :class => 'span4' }, :validate => { :presence => true, :uniqueness => false } %>
  </div>

  <div class="row-fluid">
    <%= f.input :email, :wrapper_html => { :class => 'span12' } %>
  </div>

  <div class='row-fluid tab-nested'>
  <%= f.input :password, :wrapper_html => { :class => 'span6' } %>
    <div class='span6'>
    <%= label_tag :senha2, 'Repita sua Senha' %>
    <%= text_field_tag :senha2, '', {:class => 'input-block-level'} %>
    </div>
  </div>
<% end %>

<%= field_set_tag 'Avatar' do %>
  <div class='row-fluid'>
    <div class="fileupload fileupload-new" data-provides="fileupload">
      <span class="btn btn-file btn-block span12"><span class="fileupload-new">Selecione um Arquivo</span><span class="fileupload-exists">Alterar</span><%= f.file_field :avatar %></span>
      <span class="fileupload-preview"></span>
      <a href="#" class="close fileupload-exists" data-dismiss="fileupload" style="float: none">×</a>
    </div>
  </div>
<% end %>

<div class="btn-group navigation-modal form-confirm pull-right">
  <%= link_to 'Voltar', usuarios_path, :class => 'btn' %>
  <%= f.submit :class => 'btn btn-primary' %>
</div>
<% end %>