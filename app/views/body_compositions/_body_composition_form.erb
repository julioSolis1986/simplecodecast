            <% end %>
          </div>
          <div class="row-fluid">
            <%= f.input :thigh, :wrapper => :prepend, :label => false, :wrapper_html => {:class => 'span12'} do %>
                <%= content_tag :div, :class => 'row-fluid' do %>
                    <%= f.label :thigh, :class => "span4" %>
                    <%= f.text_field :thigh, :class => "span8" %>
                <% end %>
            <% end %>
          </div>
          <div class="row-fluid">
