<div class="nested-fields">
  <%= field_set_tag "protocol" do %>
      <div class="row-fluid">
        <%= f.input :protocol, :as => :radio_buttons, :collection => ['Pollock', 'McArdle'], :label => false, :wrapper_html => {:class => 'span12'}, :item_wrapper_class => 'inline', :checked => 'Pollock' %>
      </div>
  <% end %>

  <div class='row-fluid'>
    <div class='span4'>
      <%= field_set_tag "Medidas" do %>
          <div class="row-fluid">
            <%= f.input :weight, :wrapper => :prepend, :label => false, :wrapper_html => {:class => 'span12'} do %>
                <%= content_tag :div, :class => 'row-fluid' do %>
                    <%= f.label :weight, 'Peso Atual', :class => "span4" %>
                    <%= f.text_field :weight, :class => "span8" %>
                <% end %>
            <% end %>
          </div>
          <div class="row-fluid">
            <%= f.input :height, :wrapper => :prepend, :label => false, :wrapper_html => {:class => 'span12'} do %>
                <%= content_tag :div, :class => 'row-fluid' do %>
                    <%= f.label :height, 'height', :class => "span4" %>
                    <%= f.text_field :height, :class => "span8" %>
                <% end %>
            <% end %>
          </div>
      <% end %>
    </div>
    <div class='span4'>
      <%= field_set_tag "Dobras" do %>
          <div class="row-fluid">
            <%= f.input :tricep, :wrapper => :prepend, :label => false, :wrapper_html => {:class => 'span12'} do %>
                <%= content_tag :div, :class => 'row-fluid' do %>
                    <%= f.label :tricep, :class => "span4" %>
                    <% if @client.gender.name == 'Feminino' %>
                        <%= f.text_field :tricep, :class => "span8" %>
                    <% else %>
                        <%= f.text_field :tricep, :class => "span8", :disabled => true %>
                    <% end %>
                <% end %>
            <% end %>
          </div>
          <div class="row-fluid">
