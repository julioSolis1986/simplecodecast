                <% end %>
            <% end %>
          </div>
          <div class="row-fluid">
            <%= f.input :suprailiac, :wrapper => :prepend, :label => false, :wrapper_html => {:class => 'span12'} do %>
                <%= content_tag :div, :class => 'row-fluid' do %>
                    <%= f.label :suprailiac, :class => "span4" %>
