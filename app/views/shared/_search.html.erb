<div class='form-search pull-right'>
  <%= form_for collection_url, :method => 'GET' do %>
      <%= text_field_tag :keyword, '', :class => 'input-medium search-query', :placeholder => 'Buscar...' %>
      <%= hidden_field_tag(:filter, @filter) if @filter.present? %>
      <i class='icon-search'></i>
  <% end %>
</div>