<div id="wrapper-conteudo">
  <div class='page-header'>
    <h1>Grupos Musculares</h1>
    <h2><i class='icon-book'></i> Listagem</h2>
  </div>

  <% if params['notice'] %>
  <div class="alert alert-success"><%= params['notice'] %></div>
  <% end %>

  <div class='table-header'>
    <h1>
      <i class='icon-tag'></i>
      <a class='ativo' href='#'>Todos</a>
    </h1>
    <h1>
      <a href='#'>Ativos</a>
    </h1>
    <h1>
      <a href='#'>Inativos</a>
    </h1>

    <div class="form-search pull-right">
      <input class='input-medium search-query' placeholder='Buscar...' type="text">
      <i class='icon-search'></i>
    </div>
  </div>
  <table class="lista-conteudo">
    <thead>
      <th></th>
      <th><i class="icon-chevron-up"></i><i class="icon-chevron-down"></i> Grupo Muscular</th>
      <th></th>
    </thead>

  <% @grupos_musculares.each do |grupo_muscular| %>
    <tr>
      <td colspan="2"><%= link_to grupo_muscular.nome, grupo_muscular, :class => 'conteudo-modal', :remote => true %></td>
      <td class='comando'><%= link_to 'Excluir', grupo_muscular, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
    </tr>
    <% grupo_muscular.derivados.each do |derivado| %>
      <tr>
        <td></td>
        <td><%= link_to derivado.nome, grupo_muscular, :class => 'conteudo-modal', :remote => true %></td>
        <td class='comando'><%= link_to 'Excluir', derivado, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  <% end %>
  </table>

  <br />

  <div id="conteudo-rodape">
    <%= link_to 'Novo Grupo Muscular', new_grupo_muscular_path, :class => 'blue btn btn-primary' %>
    <%= pagination @grupos_musculares %>
  </div>
</div>

<div id="modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
</div>